{
	"$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"files": {
		"ignore": [
			"**/*.js",
			"install.ztnet/**/*"
		]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 90,
		"ignore": [
			"src/locales/**/*.json"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useSelfClosingElements": "off",
				"noNonNullAssertion": "off"
			},
			"a11y": {
				"noNoninteractiveTabindex": "off",
				"useButtonType": "off",
				"noSvgWithoutTitle": "off",
				"useValidAnchor": "off",
				"useKeyWithMouseEvents": "off",
				"useKeyWithClickEvents": "off"
			},
			"suspicious": {
				"noCommentText": "warn",
				"noConsoleLog": "error",
				"noExplicitAny": "error"
			},
			"correctness": {
				"noUnusedVariables": "error"
			}
		}
	}
}